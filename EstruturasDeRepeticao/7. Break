public class ExemploBreak {  
   public static void main(String[] args) {  
   
   //Usando loop for 
   
   for(int i = 1; i <= 10; i++) {  
         if(i == 5) {  
            //parando o loop  
            break;  
         }  
          System.out.println(i);  
      }  
   }  
}  

==========================================================
Exemplo:

public class BreakExemplo2 {  

   public static void main(String[] args) {  

   //loop externo  
    
    for(int i = 1; i <= 3; i++) {  
         //loop interno  
         for(int j = 1; j <= 3; j ++) {  
            if(i == 2 && j == 2) {  
                //Usando a declaração break dentro de um loop interno  
                break;       
             }  
            System.out.println(i + " " + j);  
         }  
      }    
   }  
}  
