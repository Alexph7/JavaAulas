switch(expression){     
   case value1:     
      //código para ser executado;     
      break;  //opcional  
      
   case value2:     
      //código para ser executado;     
      break;  //opcional   
......     
     
default:      
    //código para ser executado se todos os cases não são aceitos;     
}  

